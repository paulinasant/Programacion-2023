//@name fopen: para poder abrir el archivo csv llamado "usuarios"
//La "a" significa que se creara un archivo nuevo y se escribira sin remplazar o eliminar lo que se escribio
//@name fclose se cierra el archivo y se aguardan 

    void agregar_usuario(char *nombre, char *email, char *facultad, int *edad) {
    FILE *archivo;
    archivo = fopen("usuarios.csv", "a");
   fprintf(archivo, "%s,%s,%s,%d\n",nombre, email, facultad, edad); 
    fclose(archivo);
    }


